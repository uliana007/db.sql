## 3. –û–±–Ω–æ–≤–ª–µ–Ω–Ω—ã–π register.php

```php
<?php 
session_start();
require "db.php";

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $username = $_POST['username'];
    $password = password_hash($_POST['password'], PASSWORD_BCRYPT);
    
    try {
        $stmt = $pdo->prepare("INSERT INTO users (username, password) VALUES (?, ?)");
        $stmt->execute([$username, $password]);
        
        $_SESSION['user_id'] = $pdo->lastInsertId();
        $_SESSION['username'] = $username;
        header("Location: home.php");
        exit;
    } catch (PDOException $e) {
        $error = "–û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏: " . $e->getMessage();
    }
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgba(204, 0, 0, 0.1);
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 30px;
            border-radius: 10px;
            max-width: 500px;
            margin: 50px auto;
        }
        .btn-submit {
            background-color: #D32F2F;
            border: none;
            color: white;
            border-radius: 25px;
        }
        .btn-submit:hover {
            background-color: #C2185B;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2 class="text-center">–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è</h2>
            <form method="POST">
                <div class="mb-3">
                    <input type="text" name="username" class="form-control rounded-pill" placeholder="–ò–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è" required>
                </div>
                <div class="mb-3">
                    <input type="password" name="password" class="form-control rounded-pill" placeholder="–ü–∞—Ä–æ–ª—å" required>
                </div>
                <button type="submit" class="btn btn-submit btn-lg rounded-pill w-100">–ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è</button>
                <?php if (!empty($error)) echo "<div class='alert alert-danger mt-3'>$error</div>"; ?>
